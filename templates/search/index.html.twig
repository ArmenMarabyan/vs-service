{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
    <div class="container main-content p-3 mt-5">
        {% include 'search/form.html.twig' with {term: term ?? ''}%}

        <div class="cards mt-5">
            {% for k,item in items.items %}
                <div class="card card-{{ k }}" style="margin-bottom: 10px;">
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="">{{ item.name }}</a>
                        </h4>
                        <h5 class="card-subtitle mb-2 text-muted">
                            {% if item.salary %}
                                {{ item.salary.from }} - {{ item.salary.to }} {{ item.salary.currency }}
                            {% endif %}
                        </h5>
                        <p class="card-subtitle mb-2">
                            {% if item.employer %}
                                {{ item.employer.name }}
                            {% endif %}
                            <br>
                            {% if item.area %}
                                {{ item.area.name }}
                            {% endif %}
                        </p>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="#" class="card-link">Card link</a>
                        <a href="#" class="card-link">Another link</a>
                    </div>
                </div>
            {% endfor %}



        </div>

    </div>
{% endblock %}
